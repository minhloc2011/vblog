{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "allowImportExportEverywhere": true
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": ["react"],
  "extends": ["airbnb"],
  "rules": {
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "indent": [2, 2],
    "camelcase": [2, {
        "properties": "always"
    }],
    "space-before-blocks": [1],
    "valid-typeof": [1, {"requireStringLiterals": true}],
    "no-constant-condition": [1],
    "no-cond-assign": [1],
    "no-unreachable": [1],
    "no-trailing-spaces": [1, { "skipBlankLines": true }],
    "no-unused-vars": [1, {"vars": "all", "args": "all"}],
    "no-multi-assign": "off",
    "no-empty": [1, { "allowEmptyCatch": true }],
    "no-console": [1, { "allow": ["warn", "error"] }]
  }
}
